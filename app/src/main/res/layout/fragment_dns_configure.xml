<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dc_dns_heading"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_toStartOf="@id/dc_refresh"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="5dp"
                android:text="@string/dc_other_dns_heading"
                android:textColor="?attr/accentGood"
                android:textSize="@dimen/extra_large_font_text_view"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dc_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_refresh_white" />
        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/custom_dns_rb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawableEnd="@drawable/ic_right_arrow_white"
                    android:drawablePadding="10dp"
                    android:enabled="true"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:text="@string/dc_custom_dns_radio" />

                <LinearLayout
                    android:id="@+id/query_card_view_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:weightSum="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/connected_status_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="0.5"
                        android:alpha="0.5"
                        android:fontFamily="sans-serif"
                        android:padding="5dp"
                        android:text="@string/configure_dns_connected_doh_status"
                        android:textColor="?attr/primaryTextColor"
                        android:textSize="@dimen/default_font_text_view" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/connected_status_title_url"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="0.5"
                        android:alpha="0.5"
                        android:fontFamily="sans-serif"
                        android:gravity="end"
                        android:padding="5dp"
                        android:textColor="?attr/primaryTextColor"
                        android:textSize="@dimen/default_font_text_view" />
                </LinearLayout>

                <!-- Hidden elements to keep ViewBinding compatible -->
                <com.google.android.material.radiobutton.MaterialRadioButton android:id="@+id/wireguard_rb" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
                <com.google.android.material.radiobutton.MaterialRadioButton android:id="@+id/network_dns_rb" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
                <com.google.android.material.radiobutton.MaterialRadioButton android:id="@+id/rethink_plus_dns_rb" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
                <com.google.android.material.radiobutton.MaterialRadioButton android:id="@+id/smart_dns_rb" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
                <View android:id="@+id/network_dns_info" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
                <View android:id="@+id/smart_dns_info" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Hide all other sections -->
        <View android:id="@+id/dc_blocklist_heading" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_local_blocklist_rl" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_local_blocklist_img" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_local_blocklist_icon" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_local_blocklist_container" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_local_blocklist_count" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_local_blocklist_desc" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_downloader_rl" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_downloader_switch" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_check_update_rl" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_check_update_switch" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_filtering_heading" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_alg_rl" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_alg_switch" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_split_dns_rl" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_split_dns_switch" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dv_bypass_dns_block_rl" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dv_bypass_dns_block_switch" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_allowed_record_types_rl" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_allowed_record_types_heading" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_allowed_record_types_desc" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_other_settings_heading" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_favicon_rl" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_favicon_switch" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_enable_cache_rl" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_enable_cache_switch" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_proxy_dns_rl" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_proxy_dns_switch" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_prevent_dns_leaks_rl" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_prevent_dns_leaks_switch" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_use_fallback_to_bypass_rl" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_use_fallback_to_bypass_switch" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_use_fallback_to_bypass_heading" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_undelegated_domains_rl" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/dc_undelegated_domains_switch" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
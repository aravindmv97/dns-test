<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <!-- Wrap content in ConstraintLayout with maxWidth for foldables/tablets -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="700dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingEnd="15dp"
                android:paddingBottom="15dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fhs_title_rethink"
                    style="@style/TextAppearance.Heading.HomeScreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.5"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:text="@string/app_name_small_case" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fhs_title_rethink_desc"
                    style="@style/TextAppearance.SubHeading.HomeScreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.5"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/settings_title_desc" />

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/fs_dns_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/fs_dns_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/dns_home_screen" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/fs_dns_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_toStartOf="@id/fs_dns_iv"
                        android:layout_toEndOf="@id/fs_dns_icon"
                        android:text="@string/dns_mode_info_title"
                        android:textColor="?attr/primaryTextColor"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/fs_dns_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_right_arrow_white" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Hidden elements to keep ViewBinding compatible -->
            <View android:id="@+id/fs_apps_card" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
            <View android:id="@+id/fs_firewall_card" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
            <View android:id="@+id/fs_proxy_card" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
            <View android:id="@+id/fs_network_card" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
            <View android:id="@+id/fs_others_card" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
            <View android:id="@+id/fs_logs_card" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
            <View android:id="@+id/fs_anti_censorship_card" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
            <View android:id="@+id/fs_advanced_card" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
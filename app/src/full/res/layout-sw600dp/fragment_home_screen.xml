<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:layout_scrollFlags="scroll|enterAlways">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fhs_title_rethink"
            style="@style/TextAppearance.Heading.HomeScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:gravity="center"
            android:text="@string/app_name_small_case"
            android:textStyle="bold"
            android:layout_marginBottom="40dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fhs_internet_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.75"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="?attr/primaryTextColor"
            android:textSize="@dimen/small_font_text_view"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fhs_internet_speed_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:alpha="0.75"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="?attr/primaryTextColor"
            android:textSize="@dimen/mini_font_text_view"
            android:visibility="gone" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_view_container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shimmer_auto_start="false"
            app:shimmer_base_alpha="0.85"
            app:shimmer_dropoff="1"
            app:shimmer_duration="1000"
            app:shimmer_highlight_alpha="0.35">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fhs_dns_on_off_btn"
                style="@style/Button.HomeScreen.Main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:letterSpacing="0.2"
                android:text="@string/hsf_start_btn_state" />

        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fhs_protection_level_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="?attr/accentBad"
            android:gravity="center"
            android:textSize="@dimen/large_font_text_view" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fhs_nextdns_status_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="?attr/primaryLightColorText"
            android:textSize="14sp"
            android:visibility="visible" />

        <!-- Hidden elements to keep ViewBinding compatible if needed, but simplified -->
        <View android:id="@+id/fhs_sponsor" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/fhs_sponsor_bottom" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/home_fragment_pause_icon" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/home_fragment_bottom_sheet_icon" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/fhs_card_top_ll" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/fhs_card_dns_ll" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/fhs_card_firewall_ll" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/fhs_card_proxy_ll" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/fhs_card_logs_ll" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
        <View android:id="@+id/fhs_card_apps_cv" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
